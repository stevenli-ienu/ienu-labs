{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@ienu-labs/source"],
    "paths": {
      "@ienu-labs/refactoring-pocs": ["libs/refactoring-pocs/src/index.ts"],
      "@ienu-labs/ts-risks": ["libs/ts-risks/src/index.ts"]
    }
  }
}
